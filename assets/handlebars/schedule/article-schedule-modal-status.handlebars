{{#is response.result 'success'}}
    <div class="alert alert-success" id="success-message">
        {{#is actionType 'schedule-cancel'}}
            <p class="message">This article has been unscheduled.</p>
        {{/is}}
        {{#isnt actionType 'schedule-cancel'}}
            <p class="message">Your article has been successfully scheduled.</p>
        {{/isnt}}
    </div>
{{/is}}